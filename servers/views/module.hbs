<main class="bg-grey">
  <div class="container-fluid">
    <div class="row">
      {{> sidebar_main}}

      <div class="col-md-11 col-lg-11 col-xl-11 bg-grey px-4">
        {{> nav_main}}

        <div class="row">
          <div class="col-md-6"><h1 class="ps-4 pt-2">Module</h1></div>
          <div class="col-md-6 d-flex justify-content-end">
            <div
              id="add-module"
              class="mx-4 my-3 d-flex btn custom-bold-btn"
              onclick="showDialog()"
            >
              <div class="me-2 p-1">Add Module</div>
              <img src="/icons/add.svg" alt="" />
            </div>
          </div>
        </div>

        <div class="container bg-white">
          <div class="row px-5 pt-5" id="moduleContainer">
            <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
              <div class="bg-white">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex justify-content-between">
                      <i class="fa fa-list-alt fa-4x" aria-hidden="true"></i>
                      <div class="p-2">
                        <h4 class="card-title">Login</h4>
                      </div>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-end">
                      <div>
                        <i class="bi bi-pencil-square"></i>
                        <i class="bi bi-trash"></i>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
              <div class="bg-white">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex justify-content-between">
                      <i class="fa fa-list-alt fa-4x" aria-hidden="true"></i>
                      <div class="p-2">
                        <h4 class="card-title">Test case</h4>
                      </div>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-end">
                      <div>
                        <i class="bi bi-pencil-square"></i>
                        <i class="bi bi-trash"></i>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-3">
              <div class="bg-white">
                <div class="card">
                  <div class="card-body">
                    <div class="d-flex justify-content-between">
                      <i class="fa fa-list-alt fa-4x" aria-hidden="true"></i>
                      <div class="p-2">
                        <h4 class="card-title">Project</h4>
                      </div>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-end">
                      <div>
                        <i class="bi bi-pencil-square"></i>
                        <i class="bi bi-trash"></i>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row mt-5 align-content-center px-3 pb-4">
            <div class="col">
              <h4>Showing 1 to 3 of 3 entries</h4>
            </div>
            <div class="col d-flex align-items-center">
              <button class="border-0 rounded-3 p-2 text-muted ms-auto">
                <i class="bi bi-chevron-double-left"></i>
              </button>
              <div
                class="bg-main-color rounded-circle d-flex justify-content-center align-items-center mx-3"
                style="width: 40px; height: 40px"
              >
                <h1 class="mb-0 text-light" style="font-size: 1.5rem">1</h1>
              </div>
              <button class="border-0 rounded-3 p-2 text-muted me-3">
                <i class="bi bi-chevron-double-right"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Create module -->
  <div
    class="modal fade"
    id="moduleNameModal"
    tabindex="-1"
    aria-labelledby="moduleNameModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="moduleNameModalLabel">
            Enter Module Name
          </h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <input
            type="text"
            id="moduleNameInput"
            class="form-control"
            placeholder="Module Name"
          />
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button
            type="button"
            class="btn btn-primary"
            onclick="createModule()"
          >
            Create
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Delete Confirm -->
  <div
    class="modal fade"
    id="deleteConfirmationModal"
    tabindex="-1"
    aria-labelledby="deleteConfirmationModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="deleteConfirmationModalLabel">
            Confirm Delete
          </h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          Are you sure you want to delete this module?
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <button
            type="button"
            class="btn btn-danger"
            onclick="deleteConfirmed()"
          >
            Delete
          </button>
        </div>
      </div>
    </div>
  </div>
</main>
