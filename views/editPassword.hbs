<main class="bg-grey">
    <div class="container-fluid">
        <div class="row">
            <!-- Side bar -->
            {{> sidebar_main}}

            <div class="bg-grey col-md-11 pt-4">
                <div class="container bootstrap snippets bootdey">
                    <form action="/api/v1/user/edit-password" id="editPasswordForm" onsubmit="editPassword(event)">
                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                        <h1 class="text-primary-color">Change Password</h1>
                        <hr />
                        <div class="bg-white row p-5">
                        <div class="personal-info">
                            <div
                            class="alert alert-info alert-dismissible fade show"
                            role="alert"
                            >
                            <strong>Note</strong>: When you change password, it will be
                            automatically logged out from your current session.
                            <button
                                type="button"
                                class="btn-close"
                                data-bs-dismiss="alert"
                                aria-label="Close"
                            ></button>
                            </div>
                            <form class="row g-3 px-5">
                            <div>
                                <label for="current-password" class="form-label"
                                ><span class="text-danger">*</span> Current
                                password:</label
                                >
                                <input
                                    type="password"
                                    class="form-control"
                                    id="current-password"
                                    placeholder="********"
                                    value=""
                                />
                                <label for="new-password" class="form-label pt-4"
                                ><span class="text-danger">*</span> New password:
                                </label>
                                <input
                                    type="password"
                                    class="form-control"
                                    id="new-password"
                                    placeholder="********"
                                    value=""
                                />
                                <label for="new-password" class="form-label pt-5"></label>
                                <span class="text-danger">*</span> Confirm new
                                password:</label
                                >
                                <input
                                    type="password"
                                    class="form-control"
                                    id="confirm-new-password"
                                    placeholder="********"
                                    value=""
                                />
                            </div>
                            <div class="text-center badge bg-label-danger" id="errorMessage"></div>
                            <div class="d-flex justify-content-center pt-5">
                                <button
                                class="ps-3 pe-3 ms-4 d-flex btn save-btn"
                                type="submit"
                                >
                                    Save
                                </button>
                                <div
                                class="closePopup btn text-center ps-3 pe-3 ms-4 cancel-btn"
                                >
                                    Cancel
                                </div>
                            </div>
                            </form>
                        </div>
                        </div>
                    </form>
                </div>
                <hr />
            </div>
        </div>
    </div>
</main>

{{#section "scripts"}}
    <script> const CSRF_TOKEN = "{{csrfToken}}"</script>
    <script src="/scripts/editPassword.js"></script>
{{/section}}
