<link rel="stylesheet" href="/styles/issues.module.css" />

<!-- Page hiện tại -->
<div class="container-fluid">
  <div class="row">
    <!-- Side bar -->
    {{> sidebar_main}}
    <!-- Main content -->
    <div class="col-md-11 col-lg-11 col-xl-11 bg-grey px-4">
      {{> nav_main}}
      <div class="container-fluid bg-light py-2">
        <div class="align-items-center d-flex">
          <div class="d-inline-block">
            <h5 class="ms-4 my-3">Issues</h5>
          </div>

          <div class="d-inline-block ms-auto fw-bold">
            <i class="bi bi-cloud-download ms-auto"></i>
            Export
          </div>
          <div class="d-inline-block mx-3 fw-bold">
            <i class="bi bi-cloud-upload"></i>
            Import
          </div>

          <div class="d-inline-block me-3">
            <div id="add-issue-btn" class="mx-4 my-3 d-flex btn custom-bold-btn">
              <div class="me-2 p-1">Add Issue</div>
              <img src="/icons/add.svg" alt="" />
            </div>
          </div>
        </div>
      </div>

      <div class="container-fluid bg-light mt-4 py-2">
        <div class="align-items-center d-flex">
          <h5 class="ms-4 my-3">Show</h5>
          <div class="ms-2">
            <div class="dropdown">
              <button class="btn btn-secondary dropdown-toggle p-1" type="button" id="dropdownMenu1"
                data-bs-toggle="dropdown" aria-expanded="false" style="min-width: 100px">
                5
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                <li>
                  <button class="dropdown-item" type="button">5</button>
                </li>
                <li>
                  <button class="dropdown-item" type="button">15</button>
                </li>
                <li>
                  <button class="dropdown-item" type="button">20</button>
                </li>
              </ul>
            </div>
          </div>
          <h5 class="ms-4 my-3">Issues</h5>
          <div class="ms-auto" style="min-width: 50%">
            <div class="input-group rounded">
              <input type="search" class="form-control rounded" placeholder="Search issue by name" aria-label="Search"
                aria-describedby="search-addon" id="searchIssue"/>
              <span class="input-group-text border-0" id="search-addon">
                <i class="fas fa-search"></i>
              </span>
            </div>
          </div>
          <h5 class="ms-4 my-3">Sort</h5>
          <div class="dropdown ms-3">
            <button class="btn btn-secondary dropdown-toggle py-1 px-3" type="button" id="dropdownMenu1"
              data-bs-toggle="dropdown" aria-expanded="false" style="min-width: 10%">
              Created at
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li>
                <button class="dropdown-item" type="button">
                  Priority
                </button>
              </li>
              <li>
                <button class="dropdown-item" type="button">Code</button>
              </li>
            </ul>
          </div>
          <div class="dropdown ms-3 me-3">
            <button class="btn btn-secondary dropdown-toggle py-1 px-3" type="button" id="dropdownMenu1"
              data-bs-toggle="dropdown" aria-expanded="false" style="min-width: 10%">
              Desc
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li>
                <button class="dropdown-item" type="button">Asc</button>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="container-fluid bg-color1 py-3">
        <div class="row">
          <div class="col-md-1 fs-5 text-color-1">Code</div>
          <div class="col-md-2 fs-5 text-color-1">Title</div>
          <div class="col-md-3 fs-5 text-color-1">Created By</div>
          <div class="col-md-1 fs-5 text-color-1 text-center">Status</div>
          <div class="col-md-1 fs-5 text-color-1 text-center">Priority</div>
          <div class="col-md-2 fs-5 text-color-1">Created at</div>
          <div class="col fs-5 text-color-1">Action</div>
        </div>
      </div>
      <div class="container-fluid bg-light py-3">
        {{#each issues}}
        <div class="row issue-item" data-name="{{name}}">
          <div class="col-md-1 text-color-1">{{id}}</div>
          <div class="col-md-2 text-color-1">{{name}}</div>
          <div class="col-md-3 text-color-1">{{Creator.User.first_name}} {{Creator.User.last_name}}</div>
          <div class="col-md-1 text-color-1">{{status}}</div>
          <div class="col-md-1 text-color-1">{{priority}}</div>
          <div class="col-md-2 text-color-1">{{formatDate created_at "MMM DD YYYY MM:hh"}}</div>
          <div class="col text-color-1 d-flex">
            <i class="bi bi-eye"></i>
            <i class="bi bi-pencil mx-3"></i>
            <i class="bi bi-trash"></i>
          </div>
          <hr />
        </div>
        {{/each}}

        <div class="row mt-5 align-content-center px-3 pb-4">
            <div class="col">
            <h4 id="pagination-info">Showing 1 to 6 of 6 entries</h4>
            </div>
            <div class="col d-flex align-items-center">
            <button class="border-0 rounded-3 p-2 text-muted ms-auto" id="prev-page">
                <i class="bi bi-chevron-double-left"></i>
            </button>
            <div
                class="bg-main-color rounded-circle d-flex justify-content-center align-items-center mx-3"
                style="width: 40px; height: 40px"
            >
                <h1 class="mb-0 text-light" style="font-size: 1.5rem" id="current-page">1</h1>
            </div>
            <button class="border-0 rounded-3 p-2 text-muted me-3" id="next-page">
                <i class="bi bi-chevron-double-right"></i>
            </button>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Overlay -->
<div class="overlay"></div>
<!-- Bảng add Issues-->
<div class="add-issue-table">
  <div class="container">
    <div class="d-flex align-item-center p-3">
      <h1 class="mb-0">Add issue</h1>
      <button class="btn bg-save-btn btn-primary rounded-3 ms-auto btn-lg" id="save-issue-btn">
        Save
      </button>
      <button class="btn bg-cancel-btn btn-warning bg-main-color rounded-3 mx-3 btn-lg" id="cancel-issue-btn">
        Cancel
      </button>
    </div>
    <div class="row p-3">
      <div class="col">
        <p>Issue title <span class="text-danger">*</span></p>
        <input type="text" class="form-control" placeholder="" aria-label="title" />
        <p>Status <span class="text-danger">*</span></p>
        <input type="text" class="form-control" placeholder="" aria-label="status" />
        <p>Priority <span class="text-danger">*</span></p>
        <input type="text" class="form-control" placeholder="" aria-label="priority" />
      </div>
      <div class="col d-flex flex-column">
        <p>Description</p>
        <textarea class="form-control flex-grow-1"></textarea>
      </div>
    </div>
  </div>
</div>
</main>
