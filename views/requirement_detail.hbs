

  <body class="position-relative">
    
    <main class="bg-grey">
      <div class="container-fluid">
        <div class="row">
          <!-- sidebar -->
          {{> sidebar_main}}
          <!-- main content -->
          <div class="bg-grey col-md-11">
                {{> nav_main_depth_2}}
            <div class="m-4 mt-3 bg-white semi-rounded">
              <div class="container p-4">
                <div class="d-flex flex-row justify-content-between">
                  <div
                    class="text-left fs-6 font-weight-semibold pointer-cursor"
                  >
                    <a
                      href="../requirement"
                      style="text-decoration: none"
                      class="text-dark"
                    >
                      Requirements
                    </a>

                    <img
                      class="ms-1 me-1"
                      src="/icons/single-arrow-right.svg"
                      alt=""
                    />
                    First Project
                  </div>

                  <div id="add-linked-popup" class="d-flex pointer-cursor">
                    <img
                      width="35px"
                      src="/icons/ph_link-bold.svg"
                      alt=""
                    />
                    <span class="ms-2 font-weight-semibold"
                      >Add Linked Test Cases</span
                    >
                  </div>
                </div>
                <hr />

                <div
                  class="d-flex flex-column gx-3 ps-4 pe-4 d-flex justify-content-between"
                >
                  <div
                    style="
                      background-color: var(--semi-grey-color);
                      width: fit-content;
                    "
                    class="p-2 semi-rounded pointer-cursor"
                  >
                    <span id="detailReqNav" class="font-weight-semibold p-2"
                      >Detail Requirement</span
                    >
                    <span id="linkedTCNav" class="font-color-blur p-2"
                      >Linked Test Cases</span
                    >
                  </div>

                  <!-- Detail Requirement -->
                  {{#with requirement}}
                  <div
                    id="detailReq"
                    class="shadow mt-4 p-4 ps-3 pe-3 mb-5 bg-body rounded"
                  >
                    <div class="m-2"><b>Title:</b> {{name}}</div>
                    <div class="m-2">
                      <b>Description:</b>{{#if description}}
                      {{description}}
                      {{else}}
                        No description
                        {{/if}}
                    </div>
                     <div class="m-2">
                      <b>URL:</b>{{#if url}}
                     <a href="{{url}}">{{url}}</a> 
                      {{else}}
                        No URL
                        {{/if}}
                    </div>


                    <div class="m-2"><b>Created At:</b> {{formatDate created_at "DD-MM-YYYY" }}</div>

                    <div class="m-2"><b>Created By:</b> {{ Member.User.first_name }}  {{ Member.User.last_name }}</div>
                  </div>
                    {{/with}}
                  <!-- Table Linked Test Cases -->
                  <div id="linkedTestCases" style="display: none">
                    <table class="table mt-4 me-2">
                      <thead>
                        <tr class="semi-rounded blur-green-theme">
                          <th scope="col">Case Code</th>
                          <th scope="col">Title</th>
                          <th scope="col">Steps</th>
                          <th scope="col">Created By</th>

                          <th
                            scope="col"
                            style="
                              max-width: 100px;
                              overflow: hidden;
                              text-overflow: ellipsis;
                            "
                          >
                            Created At
                          </th>
                          <th scope="col"></th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each testCases}}
                        <tr>
                          <th scope="row">{{id}}</th>
                          <td>{{title}}</td>
                          <td>{{step_count}}</td>

                          <td>{{Member.User.first_name}} {{Member.User.last_name}}</td>

                          <td
                            style="max-width: 100px"
                            class="eclipsis-overflow"
                          >
                            {{formatDate created_at "DD-MM-YYYY" }}
                          </td>

                          <td class="ps-0">
                            <div
                              class="d-flex pointer-cursor p-2 pt-0 pb-0 justify-content-end"
                            >
                              <img
                                src="/icons/octicon_unlink-24.svg"
                                alt=""
                              />
                              <span
                                class="ms-2 font-weight-semibold text-danger"
                                >Unlink</span
                              >
                            </div>
                          </td>
                        </tr>
                        {{/each}}
                      
                        
                      </tbody>
                    </table>

                    <!-- pagination -->
                    <div class="d-flex justify-content-end p-3">
                      <img
                        width="20px"
                        src="/icons/arrow-left.svg"
                        alt=""
                        srcset=""
                      />
                      <span
                        class="p-1 m-2 ps-2 pe-2 rounded-circle bg-green-dark"
                        >1</span
                      >
                      <img
                        width="20px"
                        src="/icons/arrow-right.svg"
                        alt=""
                        srcset=""
                      />
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
    <footer>
      <!-- place footer here -->
    </footer>

    <!-- add linked-popup -->
    <div
      id="linked-popup"
      class="vh-100 position-absolute overlay top-0 bottom-0 start-0 end-0"
      style="display: none"
    >
      <div
        class="d-flex justify-content-center align-items-center w-100 position-absolute top-0 bottom-0 start-0 end-0"
      >
        <!-- main content -->
        <div class="w-75 shadow bg-white semi-rounded">
          <div class="m-4 mt-2 bg-white semi-rounded">
            <div class="container p-4">
              <div class="d-flex flex-row justify-content-between">
                <!-- header of main  -->
                <h6 class="text-left fs-4">Test Cases</h6>
                <div class="d-flex">
                  <div
                    id="saveLinkedTC"
                    class="ps-3 pe-3 ms-4 d-flex btn custom-btn save-btn"
                  >
                    Save
                  </div>
                  <div
                    class="closePopup btn custom-btn text-center ps-3 pe-3 ms-4 cancel-btn"
                  >
                    Cancel
                  </div>
                </div>
              </div>
            </div>
            <hr />

            <div class="min-h-50 row gx-3 d-flex justify-content-between">
              <!-- left side of main -->
              <div class="col-4">
                <div
                  class="h-100 d-flex flex-column p-3 bg-semi-grey semi-rounded"
                >
                  <div class="d-flex">
                    <div class="flex-fill">Module</div>
                  </div>

                  <hr />
                 
                  <div id="modulesContainer" class="d-flex flex-column">
                    {{#each modules}}
                    <div
                      id="{{id}}"
                      class="d-flex pointer-cursor align-items-center col m-4 mt-4 mb-0 {{#if @first}} font-weight-semibold{{else}} font-color-blur{{/if}}"
                    >
                      <img
                        class="me-2"
                        src="/icons/ic_round-folder.svg"
                        alt=""
                      />
                      {{name}}
                    </div>
                    {{/each}}
                  
                    
                  </div>
                </div>
              </div>

              <!-- right side of main -->
              <div class="col-8">
                <div class="h-100 flex bg-semi-grey semi-rounded p-3">
                  <!-- action bar -->
                  <div class="d-flex align-items-center">
                    
                    <div class="d-flex align-items-center flex-fill">
                      <span>Sort</span>
                      <div class="d-flex rounded-1 p-2 ms-2 bg-white">
                         <a class="nav-link " href="#" id="dropdownLanguageId" data-bs-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                            <span class="me-4 font-weight-semibold">
                              {{#if (equals sortField "test_case_code")}}
                              TestCase Code
                              {{else}}
                              Title
                              {{/if}}
                              <img src="/icons/sort-icon.svg" alt="" />
                            </span>
                          </a>

                          <div class="dropdown-menu" aria-labelledby="dropdownLanguageId">
                            <a class="dropdown-item" href="?module={{module}}&moduleName={{moduleName}}&size={{size}}&page={{page}}&sortField=id&sortType={{sortType}}">TestCase Code</a>
                            <a class="dropdown-item" href="?module={{module}}&moduleName={{moduleName}}&size={{size}}&page={{page}}&sortField=name&sortType={{sortType}}">Title</a>
                          </div>

                        <span
                          class="font-weight-semibold d-flex align-items-center"
                        >
                          Asc
                          <img
                            src="/icons/lucide_sort-asc.svg"
                            alt=""
                          />
                        </span>
                      </div>
                    </div>
                  </div>

                  <!-- table -->
                  <table class="table mt-4 me-2">
                    <thead>
                      <tr class="semi-rounded blur-green-theme">
                        <th scope="col"></th>
                        <th scope="col">Case Code</th>
                        <th scope="col">Title</th>
                        <th scope="col">Steps</th>

                        <th scope="col"></th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each testCases}}
                      <tr>
                        <td>
                          <input
                            class="ms-2 mt-1 checkbox-lg"
                            size=""
                            type="checkbox"
                            name="chosen-tc"
                            value="{{id}}"
                            id="{{id}}"
                          />
                        </td>
                        <th scope="row">
                          <label for="{{id}}">{{id}}</label>
                        </th>
                        <td>{{title}}</td>
                        <td>{{step_count}}</td>

                        <td class="ps-0">
                          <div
                            class="d-flex pointer-cursor p-2 pt-0 pb-0 justify-content-end"
                          >
                            <img
                              src="/icons/mdi_eye-outline.svg"
                              alt=""
                            />
                          </div>
                        </td>
                      </tr>
                      {{/each}}
                      {{!-- <tr>
                        <td>
                          <input
                            class="ms-2 mt-1 checkbox-lg"
                            size=""
                            type="checkbox"
                            name="chosen-tc"
                            value="1"
                            id="md1"
                          />
                        </td>
                        <th scope="row">
                          <label for="md1">TC001</label>
                        </th>
                        <td>TC Number 01</td>
                        <td>4</td>

                        <td class="ps-0">
                          <div
                            class="d-flex pointer-cursor p-2 pt-0 pb-0 justify-content-end"
                          >
                            <img
                              src="/icons/mdi_eye-outline.svg"
                              alt=""
                            />
                          </div>
                        </td>
                      </tr> --}}
                     
                    </tbody>
                  </table>

                  <!-- pagination -->
                  <div class="d-flex justify-content-between p-3">
                    <div>
                      <img
                        width="20px"
                        src="/icons/arrow-left.svg"
                        alt=""
                        srcset=""
                      />
                      <span
                        class="p-1 ps-2 pe-2 rounded-circle green-dark-theme"
                        >1</span
                      >
                      <img
                        width="20px"
                        src="/icons/arrow-right.svg"
                        alt=""
                        srcset=""
                      />
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>

{{#section "scripts"}}
    <script>
      (function (fn) {
        "use strict";
        fn(window.jQuery, window, document);
      })(function ($, window, document) {
        "use strict";

        $(function () {
          $("#linkedTestCases").hide();

          $("#detailReqNav").click(function () {
            $("#detailReqNav").attr("class", "p-2 font-weight-semibold");
            $("#linkedTestCases").hide(); // fades it in
            $("#detailReq").fadeIn(300);

            $("#linkedTCNav").attr("class", "p-2 font-color-blur");
          });

          $("#linkedTCNav").click(function () {
            $("#detailReq").hide(); // fades it in
            $("#linkedTestCases").fadeIn(300);

            $("#linkedTCNav").attr("class", "p-2 font-weight-semibold");
            $("#detailReqNav").attr("class", "p-2 font-color-blur");
          });
        });
      });
    </script>
    <script src="/scripts/add-linked-tc.js"></script>
{{/section}}